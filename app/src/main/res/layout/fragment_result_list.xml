<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.ResultItemFragment">

    <ImageButton
        android:id="@+id/result_exit_button"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="5dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Go back"
        android:src="@drawable/ic_arrow_back_foreground"
        app:layout_constraintBottom_toTopOf="@+id/edit_filters_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        app:shapeAppearanceOverlay="@style/circleImageView" />

    <ListView
        android:id="@+id/result_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#f0f0f0"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_filters_btn"
        app:layout_constraintVertical_bias="0.0"></ListView>

    <GridLayout
        android:id="@+id/filters_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toTopOf="@+id/result_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_exit_button">

        <!-- EditText for Filter 1 -->
        <EditText
            android:id="@+id/filter_input_1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@color/gray"
            android:padding="2dp"
            android:textColor="@android:color/white" />

        <!-- EditText for Filter 2 -->
        <EditText
            android:id="@+id/filter_input_2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/gray"
            android:padding="2dp"
            android:textColor="@android:color/white" />

        <!-- EditText for Filter 3 -->
        <EditText
            android:id="@+id/filter_input_3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/gray"
            android:padding="2dp"
            android:textColor="@android:color/white" />

        <!-- EditText for Filter 4 -->
        <EditText
            android:id="@+id/filter_input_4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:background="@color/gray"
            android:padding="2dp"
            android:textColor="@android:color/white" />

    </GridLayout>

    <Button
        android:id="@+id/edit_filters_btn"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/lavender"
        android:text="EDIT FILTERS"
        android:textSize="14dp"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filters_bar" />

</androidx.constraintlayout.widget.ConstraintLayout>
